<div id="delete-modal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Are you sure?</h4>
      </div>
      <div class="modal-body">
        <p>You are about to permanently delete this snippet.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"><i class="glyphicon glyphicon-remove"></i> Cancel</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal" id="delete-modal-confirm"><i class="glyphicon glyphicon-trash"></i> Delete</button>
      </div>
    </div>
  </div>
</div>
