<div class="row item-grid">
  {{#each items as |item|}}
    <div class="col-sm-6 col-md-4 show-item">
      <div class="panel panel-default" data-id="{{item.id}}">
        <div class="panel-body">
          <h4 class="item-title">{{item.title}}</h4>
          <div class="item-body">{{item.body}}</div>
        </div>
        <div class="panel-footer">
          <button class="btn btn-link edit-item-link">Edit <span class="glyphicon glyphicon-pencil"></span></button>
          <button class="btn btn-link pull-right delete-item-link">Delete <span class="glyphicon glyphicon-trash"></span></button>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  {{/each}}
</div>


